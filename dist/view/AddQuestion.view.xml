<mvc:View
    controllerName="learninggame.controller.AddQuestion"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page title="Neue Frage hinzufügen" titleAlignment="Center">
        <content>
            <ScrollContainer
                vertical="true"
                horizontal="false"
                width="100%"
                height="100%"
                focusable="true">

                <!-- HBox sorgt für horizontale Zentrierung -->
                <HBox justifyContent="Center" width="100%">
                    <!-- VBox bekommt Maximalbreite + Padding -->
                    <VBox
                        width="100%"
                        class="sapUiMediumMargin sapUiNoContentPadding sapUiSizeCompact">

                        <Label text="Fragetext" />
                        <Input id="inpQuestionText" placeholder="Frage eingeben..." width="100%" />

                        <Label text="Antwort A" class="sapUiSmallMarginTop"/>
                        <Input id="inpA" placeholder="Antwort A" width="100%"/>
                        <CheckBox id="chkA" text="Korrekt?" class="sapUiTinyMarginTop"/>

                        <Label text="Antwort B" class="sapUiSmallMarginTop"/>
                        <Input id="inpB" placeholder="Antwort B" width="100%"/>
                        <CheckBox id="chkB" text="Korrekt?" class="sapUiTinyMarginTop"/>

                        <Label text="Antwort C" class="sapUiSmallMarginTop"/>
                        <Input id="inpC" placeholder="Antwort C" width="100%"/>
                        <CheckBox id="chkC" text="Korrekt?" class="sapUiTinyMarginTop"/>

                        <Label text="Antwort D" class="sapUiSmallMarginTop"/>
                        <Input id="inpD" placeholder="Antwort D" width="100%"/>
                        <CheckBox id="chkD" text="Korrekt?" class="sapUiTinyMarginTop"/>

                        <Label text="Antwort E" class="sapUiSmallMarginTop"/>
                        <Input id="inpE" placeholder="Antwort E (optional)" width="100%"/>
                        <CheckBox id="chkE" text="Korrekt?" class="sapUiTinyMarginTop"/>

                        <Label text="Antwort F" class="sapUiSmallMarginTop"/>
                        <Input id="inpF" placeholder="Antwort F (optional)" width="100%"/>
                        <CheckBox id="chkF" text="Korrekt?" class="sapUiTinyMarginTop"/>

                        <Label text="Kategorie / Topic" class="sapUiMediumMarginTop" />

                        <!-- Korrigiertes Binding -->
                        <Select id="selTopic"
                                width="100%"
                                items="{GameSettings>/availableTopics}">
                            <core:Item key="{GameSettings>key}" text="{GameSettings>text}" />
                        </Select>

                        <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginTop" width="100%">
                            <Button text="JSON generieren" type="Emphasized" press=".onGenerateJSON"/>
                            <Button text="Als Datei herunterladen" press=".onDownloadJSON"/>
                        </HBox>

                        <Label text="Generiertes JSON" class="sapUiSmallMarginTop" />
                        <TextArea id="txtResult" width="100%" rows="12" editable="false" />

                    </VBox>
                </HBox>
            </ScrollContainer>
        </content>
    </Page>
</mvc:View>
